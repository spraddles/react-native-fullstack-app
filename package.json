{
    "name": "gringopay",
    "main": "expo-router/entry",
    "license": "private",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "sh ./scripts/expo-start.sh",
        "prebuild": "sh ./scripts/expo-prebuild.sh",
        "build:ios": "sh ./scripts/xcode-build-ios.sh",
        "simulate:ios": "sh ./scripts/xcode-ios-simulate.sh",
        "test": "jest --watchAll",
        "ios": "expo run:ios",
        "android": "expo run:android",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "xcode:cache:remove": "sh ./scripts/xcode-remove-cache.sh",
        "expo:check": "sh ./scripts/expo-doctor.sh dev",
        "eas:secrets:update:dev": "sh ./scripts/eas-push-secrets.sh dev",
        "eas:secrets:update:prod": "sh ./scripts/eas-push-secrets.sh production",
        "eas:build:dev": "sh ./scripts/eas-build.sh dev",
        "eas:build:testflight": "sh ./scripts/eas-build.sh preview",
        "eas:build:production": "sh ./scripts/eas-build.sh production",
        "create-keys": "sh ./scripts/create-keys.sh",
        "supabase:secrets:update:dev": "sh ./scripts/supabase-update-secrets.sh dev",
        "supabase:dev:rollback": "sh ./scripts/supabase-rollback-dev-database.sh --auto --force",
        "supabase:dev:reset": "sh ./scripts/supabase-reset-dev-database.sh",
        "supabase:migrate:new": "supabase migration new my_migration_name",
        "supabase:migrate:push": "sh ./scripts/supabase-run-migrations.sh dev"
    },
    "dependencies": {
        "@expo/vector-icons": "^14.0.2",
        "@react-native-async-storage/async-storage": "1.23.1",
