{
    "name": "globalpay",
    "main": "expo-router/entry",
    "license": "private",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "NODE_ENV=development npx expo start",
        "prebuild:dev": "sh ./scripts/prebuild.sh",
        "build:ios:dev": "sh ./scripts/build-dev.sh",
        "simulate:ios": "sh ./scripts/simulate.sh",
        "test": "jest --watchAll",
        "ios": "expo run:ios",
        "android": "expo run:android",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "cache:remove:xcode": "sh ./scripts/remove-xcode-cache.sh",
        "docker": "sh ./scripts/docker-run.sh development",
        "docker:build": "docker build -t node-express -f ./docker/services/express/dockerfile .",
        "docker:prune": "docker system prune",
        "docker:purge": "sh ./scripts/docker-purge.sh && docker system prune -f",
        "github:prod:secrets:update": "node ./scripts/update-github-secrets.mjs production",
        "github:test:secrets:update": "node ./scripts/update-github-secrets.mjs test",
        "gcp:prod:secrets:update": "sh ./scripts/update-gcp-secrets.sh production",
        "gcp:test:secrets:update": "sh ./scripts/update-gcp-secrets.sh test",
        "create-keys": "sh ./scripts/create-keys.sh",
        "supabase:dev:reset": "sh ./scripts/reset-dev-database.sh",
        "supabase:migrate:new": "supabase migration new my_migration_name",
        "supabase:migrate:push": "sh ./scripts/run-migrations.sh"
    },
    "jest": {
        "preset": "jest-expo"
    },
    "dependencies": {
        "@expo/vector-icons": "^14.0.2",
        "@react-native-async-storage/async-storage": "^2.1.0",
        "@react-native-google-signin/google-signin": "^13.1.0",
        "@react-navigation/native": "^7.0.0",
        "@supabase/supabase-js": "^2.47.12",
        "expo": "~52.0.20",
        "expo-apple-authentication": "^7.1.2",
        "expo-font": "~13.0.2",
        "expo-linking": "~7.0.3",
        "expo-router": "~4.0.14",
        "expo-splash-screen": "~0.29.18",
        "expo-status-bar": "~2.0.0",
        "expo-system-ui": "~4.0.6",
        "expo-web-browser": "~14.0.1",
        "fuse.js": "^7.1.0",
        "node-forge": "^1.3.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-native": "0.76.5",
        "react-native-reanimated": "~3.16.1",
        "react-native-safe-area-context": "4.12.0",
        "react-native-screens": "~4.1.0",
        "zustand": "^5.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@react-native-community/eslint-config": "^3.2.0",
        "@react-native/eslint-config": "^0.76.5",
        "@types/react": "~18.3.12",
        "@types/react-native": "^0.73.0",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "dotenv": "^16.4.7",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^28.10.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.2.1",
        "jest-expo": "~52.0.2",
        "libsodium-wrappers": "^0.7.15",
        "node-fetch": "^3.3.2",
        "prettier": "^3.4.2",
        "react-test-renderer": "18.3.1",
        "typescript": "~5.3.3"
    }
}
